{% extends logged == 'logged' 
    ? 'loginBundle:Default:basicentidade.html.twig' 
    : 'loginBundle:Default:basic.html.twig' %}
        
{%block container %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="row">
                    <div class="col-lg-12">
                        <hr>
                            <h2 class="intro-text text-center">
                                <strong>Bem vindo!</strong>
                            </h2>
                        <hr>
                        <div class="col-lg-12 text-center">
                            {%if logged != 'logged' %}
                            <p>O Quizzical é um site voltado para promulgar o aprendizado e o desenvolvimento do conhecimento.</p>
                            <div class="col-xs-12" style="height:25px;"></div>
                            <form role="form" action="{{path('login_entidadereg')}}">
                                <div class="row">
                                    <div class="form-group col-lg-4 text-center"></div>
                                    <div class="form-group col-lg-4 text-center">
                                        <button type="submit" class="btn btn-primary btn-block">Registre-se</button>
                                    </div>
                                </div>
                            </form>
                            {%else%}
                            <p>O Quizzical é um site voltado para promulgar o aprendizado e o desenvolvimento do conhecimento.</p>
                            
                            <div class="col-xs-12" style="height:50px;"></div>
                            <form role="form" action="{{path('login_eventoreg')}}">
                                <div class="row">
                                    <div class="form-group col-lg-4 text-center"></div>
                                    <div class="form-group col-lg-4 text-center">
                                        <button type="submit" class="btn btn-primary btn-block">Crie um quizz</button>
                                    </div>
                                </div>
                            </form>
                            {%endif%}
                         </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{%endblock%}
